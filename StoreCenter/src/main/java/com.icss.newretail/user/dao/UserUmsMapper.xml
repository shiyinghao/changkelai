<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icss.newretail.user.dao.UserUmsMapper">

    <select id="selectByVertCode" resultType="com.icss.newretail.user.entity.UserUms">
        SELECT * from t_user_ums where phone=#{phone} order by create_time desc limit 1
    </select>
    <select id="getUmsList" resultType="com.icss.newretail.model.UserUmsReponse">
        SELECT a.* FROM t_user_ums a
        WHERE
        1=1
        <if test="para.phone !=null and para.phone!=''">
            and a.phone=#{para.phone}
        </if>
        ORDER BY create_time DESC
    </select>
</mapper>
