<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icss.newretail.user.dao.UserCodeMapper">

    <insert id="insertCode">
         insert into t_user_authcode VALUES (#{userAuthCodeReq.phone},#{userAuthCodeReq.code},#{userAuthCodeReq.sendTime})
    </insert>

    <select id="selectByPhAndCode" resultType="com.icss.newretail.user.entity.UserAuthCode">
        SELECT code,phone from t_user_authcode where phone=#{phone} order by send_time desc limit 1
    </select>
</mapper>